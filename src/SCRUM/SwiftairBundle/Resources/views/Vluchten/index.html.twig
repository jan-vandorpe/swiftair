{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Vluchten list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Vertrekhavenid</th>
                <th>Aankomsthavenid</th>
                <th>Vliegtuigid</th>
                <th>Vertrekdatum</th>
                <th>Aankomstdatum</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('vluchten_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.vertrekhavenid }}</td>
                <td>{{ entity.aankomsthavenid }}</td>
                <td>{{ entity.vliegtuigid }}</td>
                <td>{% if entity.vertrekdatum %}{{ entity.vertrekdatum|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.aankomstdatum %}{{ entity.aankomstdatum|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('vluchten_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('vluchten_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('vluchten_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
