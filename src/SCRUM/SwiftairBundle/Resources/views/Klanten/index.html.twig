{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Klanten list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Naam</th>
                <th>Voornaam</th>
                <th>Adres</th>
                <th>Telefoon</th>
                <th>Email</th>
                <th>Kredietkaart</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('klanten_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.naam }}</td>
                <td>{{ entity.voornaam }}</td>
                <td>{{ entity.adres }}</td>
                <td>{{ entity.telefoon }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.kredietkaart }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('klanten_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('klanten_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('klanten_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
