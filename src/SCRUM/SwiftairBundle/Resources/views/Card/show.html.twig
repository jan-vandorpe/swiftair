{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Card</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nummer</th>
                <td>{{ entity.nummer }}</td>
            </tr>
            <tr>
                <th>Expiration</th>
                <td>{{ entity.expiration|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ entity.naam }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('card') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('card_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
