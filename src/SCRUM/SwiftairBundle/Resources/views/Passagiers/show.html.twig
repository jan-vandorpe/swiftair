{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Passagiers</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ entity.naam }}</td>
            </tr>
            <tr>
                <th>Voornaam</th>
                <td>{{ entity.voornaam }}</td>
            </tr>
            <tr>
                <th>Adres</th>
                <td>{{ entity.adres }}</td>
            </tr>
            <tr>
                <th>Rijksregister</th>
                <td>{{ entity.rijksregister }}</td>
            </tr>
            <tr>
                <th>Geboortedatum</th>
                <td>{{ entity.geboortedatum|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('passagiers') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('passagiers_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
